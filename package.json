{
  "name": "hirakata",
  "version": "1.0.0",
  "description": "Aplicación para aprender Hiragana y Katakana",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run build:css:prod",
    "build:css": "tailwindcss -i ./src/styles.css -o ./styles.css --watch",
    "build:css:prod": "tailwindcss -i ./src/styles.css -o ./styles.css --minify",
    "serve": "python -m http.server 8000",
    "dev": "npm-run-all --parallel build:css:start start",
    "build:css:start": "tailwindcss -i ./src/styles.css -o ./styles.css --watch"
  },
  "keywords": ["japonés", "hiragana", "katakana", "aprendizaje"],
  "author": "nakanakadev",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "express": "^4.18.2"
  }
}